<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/save_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/saveTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/save_image_view"
            android:text="Haber Başlığı"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/saveDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveTitleText"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/save_image_view"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/savePublishedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveDescriptionText"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/save_image_view"
            android:text="Date"
            android:textSize="10dp" />

        <com.github.ivbaranov.mfb.MaterialFavoriteButton
            android:id="@+id/save_button"
            android:layout_width="78dp"
            android:layout_height="69dp"
            android:layout_below="@+id/savePublishedAt"
            android:layout_marginStart="174dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@id/save_image_view"
            app:mfb_animate_favorite="true"
            app:mfb_animate_unfavorite="false"
            app:mfb_bounce_duration="300"
            app:mfb_favorite_image="@drawable/ic_heart_filled"
            app:mfb_not_favorite_image="@drawable/ic_heart"
            app:mfb_padding="12"
            app:mfb_rotation_angle="360"
            app:mfb_rotation_duration="400"
            app:mfb_size="55"
            app:mfb_type="heart" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>